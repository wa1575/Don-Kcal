<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_record"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddRecordActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_width="match_parent"
        android:layout_height="220dp">
        <RelativeLayout
            android:layout_weight="0.25"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TableLayout
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow android:layout_weight="1">

                    <Button
                        android:id="@+id/keyboard_one"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:text="1"
                        android:textColor="@color/primary_text"
                        app:backgroundTint="@color/kalc_launcher_background"
                        tools:ignore="TextContrastCheck" />

                    <Button
                        android:id="@+id/keyboard_two"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:text="2"
                        android:textColor="@color/colorPrimary_text"
                        app:backgroundTint="@color/kalc_launcher_background" />

                    <Button
                        android:id="@+id/keyboard_three"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:text="3"
                        android:textColor="@color/primary_text"
                        app:backgroundTint="@color/kalc_launcher_background" />

                </TableRow>
                <TableRow android:layout_weight="1">

                    <Button
                        android:id="@+id/keyboard_four"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:text="4"
                        android:textColor="@color/primary_text"
                        app:backgroundTint="@color/kalc_launcher_background" />

                    <Button
                        android:id="@+id/keyboard_five"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:text="5"
                        android:textColor="@color/primary_text"
                        app:backgroundTint="@color/kalc_launcher_background" />

                    <Button
                        android:id="@+id/keyboard_six"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:text="6"
                        android:textColor="@color/primary_text"
                        app:backgroundTint="@color/kalc_launcher_background" />

                </TableRow>
                <TableRow android:layout_weight="1">

                    <Button
                        android:id="@+id/keyboard_seven"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:text="7"
                        android:textColor="@color/primary_text"
                        app:backgroundTint="@color/kalc_launcher_background" />

                    <Button
                        android:id="@+id/keyboard_eight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:text="8"
                        android:textColor="@color/primary_text"
                        app:backgroundTint="@color/kalc_launcher_background" />

                    <Button
                        android:id="@+id/keyboard_nine"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:text="9"
                        android:textColor="@color/primary_text"
                        app:backgroundTint="@color/kalc_launcher_background" />

                </TableRow>
                <TableRow android:layout_weight="1">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        app:backgroundTint="@color/kalc_launcher_background"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <Button
                        android:id="@+id/keyboard_zero"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:text="0"
                        android:textColor="@color/primary_text"
                        app:backgroundTint="@color/kalc_launcher_background" />

                    <Button
                        android:id="@+id/keyboard_dot"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:text="."
                        android:textColor="@color/primary_text"
                        app:backgroundTint="@color/kalc_launcher_background" />

                </TableRow>

            </TableLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="0.75"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/keyboard_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@android:color/white"
                    android:src="@drawable/baseline_local_dining_24"
                    tools:ignore="SpeakableTextPresentCheck" />

                <ImageButton
                    android:id="@+id/keyboard_backspace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:src="@drawable/baseline_backspace_24"
                    tools:ignore="SpeakableTextPresentCheck" />

                <ImageButton
                    android:id="@+id/keyboard_done"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:src="@drawable/baseline_done_24"
                    tools:ignore="SpeakableTextPresentCheck" />

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/linearLayout"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/textView_amount"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:text="0.00"
            android:textColor="@android:color/white"
            android:textSize="60dp" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/textView_amount"
            android:layout_margin="10dp"
            android:background="@drawable/bg_edit_text"
            android:paddingLeft="10dp"
            android:text="Book"
            android:textColor="@android:color/white"
            android:textSize="30dp"
            android:textStyle="normal" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:overScrollMode="never"
            android:nestedScrollingEnabled="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/editText"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp">
        </androidx.recyclerview.widget.RecyclerView>

    </RelativeLayout>

</RelativeLayout>